{
  "expo": {
    "name": "Spoken",
    "slug": "spoken-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/app-icon.png",
    "scheme": "spokenApp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "contentFit": "contain",
      "backgroundColor": "#121212"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cbm.spokenApp",
        "config": {
          "usesNonExemptEncryption": false
        }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#121212"
      },
      "package": "com.cbm.spokenApp"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-image-picker",
      "expo-contacts"
    ],
    "config": {
      "plugins": {
        "expo-image-picker": {
          "photosPermission": "Allow Spoken to access your photo",
          "cameraPermission": "Allow Spoken to access your camera"
        },
        "expo-contacts": {
          "alwaysAskBeforeSend": true
        }
      }
    },    
    "experiments": {
      "typedRoutes": true
    }
  }
}
